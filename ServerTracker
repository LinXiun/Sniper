-- LocalScript (put in StarterGui)
local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Configuration
local placeId = tostring(game.PlaceId) -- uses the current place ID; for universes you'd use the universe id if desired
local limitPerPage = 100 -- API allows up to 100
local baseUrl = ("https://games.roblox.com/v1/games/%s/servers/Public"):format(placeId)

-- Utility: safe get async with pcall
local function safeGet(url)
    local ok, res = pcall(HttpService.GetAsync, HttpService, url, true)
    if not ok then
        return false, res
    end
    local decodeOk, data = pcall(HttpService.JSONDecode, HttpService, res)
    if not decodeOk then
        return false, data
    end
    return true, data
end

-- Fetch all pages and collect job ids
local function fetchAllJobIds()
    local jobIds = {}
    local cursor = nil
    while true do
        local url = baseUrl .. ("?limit=%d&sortOrder=Asc"):format(limitPerPage)
        if cursor and cursor ~= "" then
            url = url .. "&cursor=" .. HttpService:UrlEncode(tostring(cursor))
        end

        local ok, data = safeGet(url)
        if not ok then
            warn("Failed to fetch servers: ", data)
            break
        end

        if data and data.data and #data.data > 0 then
            for _, server in ipairs(data.data) do
                if server.id then
                    table.insert(jobIds, server.id)
                end
            end
        end

        -- pagination cursor (may be nil or empty when no more pages)
        cursor = data.nextPageCursor
        if not cursor or cursor == "" then
            break
        end

        -- tiny wait to be a bit nicer to the API (adjust as needed)
        task.wait(0.2)
    end

    return jobIds
end

-- Build a simple GUI to show the job ids
local function showGui(jobIds)
    -- cleanup any old GUI by name
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "ServerJobIdLister"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = player:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 420, 0, 360)
    frame.Position = UDim2.new(0.5, -210, 0.5, -180)
    frame.AnchorPoint = Vector2.new(0.5, 0.5)
    frame.BackgroundTransparency = 0.15
    frame.Parent = screenGui

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 36)
    title.BackgroundTransparency = 1
    title.Text = "Server Job IDs (" .. tostring(#jobIds) .. ")"
    title.Font = Enum.Font.SourceSansBold
    title.TextSize = 18
    title.Parent = frame

    local closeBtn = Instance.new("TextButton")
    closeBtn.Size = UDim2.new(0, 28, 0, 28)
    closeBtn.Position = UDim2.new(1, -34, 0, 4)
    closeBtn.Text = "X"
    closeBtn.Parent = frame
    closeBtn.MouseButton1Click:Connect(function()
        screenGui:Destroy()
    end)

    local scroll = Instance.new("ScrollingFrame")
    scroll.Size = UDim2.new(1, -12, 1, -56)
    scroll.Position = UDim2.new(0, 6, 0, 42)
    scroll.CanvasSize = UDim2.new(0, 0, 0, math.max(1, #jobIds) * 34)
    scroll.Parent = frame
    scroll.BorderSizePixel = 0
    scroll.ScrollBarThickness = 6

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 6)
    layout.Parent = scroll
    layout.SortOrder = Enum.SortOrder.LayoutOrder

    for i, id in ipairs(jobIds) do
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -10, 0, 28)
        btn.Position = UDim2.new(0, 5, 0, (i-1)*34)
        btn.Text = id
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 16
        btn.Parent = scroll

        btn.MouseButton1Click:Connect(function()
            print("Clicked jobId:", id)
            -- attempt to copy to clipboard if environment supports setclipboard
            local success, err = pcall(function()
                if setclipboard then
                    setclipboard(tostring(id))
                else
                    error("setclipboard not available in this environment")
                end
            end)
            if success then
                -- give a quick visible feedback (temporary text change)
                local old = btn.Text
                btn.Text = "Copied âœ“"
                task.delay(0.9, function()
                    if btn and btn.Parent then btn.Text = old end
                end)
            else
                -- fallback: print message (clipboard not available)
                warn("Could not copy to clipboard: ", err)
            end
        end)
    end
end

-- Main
spawn(function()
    -- quick check for HttpService enabled
    local success, test = pcall(function()
        -- try a quick request to a small endpoint to see if HTTP is allowed (we use the same endpoint with limit=1)
        local url = baseUrl .. "?limit=1"
        local ok, data = safeGet(url)
        if not ok then
            error(data)
        end
        return true
    end)

    if not success then
        warn("HTTP requests appear disabled or failed. Enable HTTP Requests in Game Settings. Error: ", test)
        return
    end

    local jobIds = fetchAllJobIds()
    print("Found " .. tostring(#jobIds) .. " public server job IDs.")
    if #jobIds == 0 then
        warn("No public servers found (or API returned none).")
    else
        showGui(jobIds)
    end
end)